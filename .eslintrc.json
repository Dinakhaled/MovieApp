{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["prettier", "prettier/react"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module",
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "parser": "flow", "singleAttributePerLine": true }
    ]
  },
  "parser": "babel-eslint"
}
